@model mvc_angela_trifunoska.ViewModel.ProfessorFilterViewModel
    

    @{ ViewData["Title"] = "Index"; }

    <h1>Index</h1>

    <form asp-controller="Professor" asp-action="Index" method="get">
        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <p>
            Ime:<input type="text" asp-for="firstName" />
        </p>

        <p>
            Prezime:<input type="text" asp-for="lastName" />
        </p>

        <p>
            Education:<input type="text" asp-for="education" />
        </p>

        <p>
            Rank:<input type="text" asp-for="rank" />
        </p>

        <input type="submit" value="Filter" />
    </form>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Professors[0].FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Professors[0].LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Professors[0].Education)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Professors[0].Rank)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Professors[0].FullName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Professors)
            {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.FirstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LastName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Education)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Rank)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FullName)
    </td>
    <td>
        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
    </td>
</tr>}
        </tbody>
    </table>
